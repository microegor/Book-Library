<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SearchBox" Width="200" Margin="10"/>
                <Button Content="Поиск" Width="100" Margin="10" Click="SearchButton_Click"/>
            </StackPanel>
            <ListBox x:Name="BooksList" Width="760" Height="300" Margin="10"/>
            <StackPanel Orientation="Horizontal" Margin="20,10,20,0">
                <Button Content="Добавить книгу" Width="150" Margin="0,0,10,0" Click="AddBookButton_Click"/>
                <Button Content="Обновить книгу" Width="150" Margin="0,0,10,0" Click="UpdateBookButton_Click"/>
                <Button Content="Удалить книгу" Width="150" Click="DeleteBookButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
